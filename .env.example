# Database
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Authentication
JWT_SECRET="your-secret-key-here-change-in-production"

# Server
PORT=3001
NODE_ENV="development"
HOST="0.0.0.0"

# Frontend URLs (para CORS)
FRONTEND_URL="http://localhost:5173"

# Frontend Environment Variables (Vite)
# Adicione estas no arquivo .env.local do frontend ou na Vercel:
# VITE_API_URL="http://localhost:3001"
# VITE_WS_URL="ws://localhost:3001"
# 
# Para produção na Vercel:
# VITE_API_URL="https://seu-backend.onrender.com"
# VITE_WS_URL="wss://seu-backend.onrender.com"

# SMTP Email Configuration
# Gmail example (requires App Password from https://myaccount.google.com/apppasswords)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Alternative SMTP Providers:
# SendGrid: smtp.sendgrid.net (port 587)
# Mailgun: smtp.mailgun.org (port 587)
# Outlook: smtp-mail.outlook.com (port 587)
# Mailtrap (testing): smtp.mailtrap.io (port 587)
